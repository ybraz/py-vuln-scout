{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/py-vuln-scout/schemas/regex_rule.schema.json",
  "title": "Regex Rule Schema",
  "description": "Schema for regex-based vulnerability detection rules",
  "type": "object",
  "required": ["id", "cwe_id", "patterns"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the rule",
      "pattern": "^CWE-[0-9]+\\.(regex|llm)\\.[0-9]+$",
      "examples": ["CWE-79.regex.001"]
    },
    "name": {
      "type": "string",
      "description": "Short name for the rule",
      "examples": ["Flask XSS in render_template_string"]
    },
    "cwe_id": {
      "type": "string",
      "description": "CWE identifier",
      "pattern": "^CWE-[0-9]+$",
      "examples": ["CWE-79"]
    },
    "severity": {
      "type": "string",
      "enum": ["LOW", "MEDIUM", "HIGH", "CRITICAL"],
      "default": "MEDIUM"
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "default": 0.5,
      "description": "Base confidence level for this rule"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of what this rule detects"
    },
    "references": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "description": "External references and documentation links"
    },
    "patterns": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["regex"],
        "properties": {
          "regex": {
            "type": "string",
            "description": "PCRE-compatible regular expression pattern"
          },
          "flags": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["IGNORECASE", "MULTILINE", "DOTALL", "VERBOSE"]
            },
            "default": []
          },
          "context": {
            "type": "object",
            "properties": {
              "require_call_names": {
                "type": "array",
                "items": {"type": "string"},
                "description": "Function/method names that must be present in the AST context"
              },
              "ban_sanitizers": {
                "type": "array",
                "items": {"type": "string"},
                "description": "Sanitizer function names; if present, reduce confidence"
              },
              "taint_sources": {
                "type": "array",
                "items": {"type": "string"},
                "description": "Names of taint sources to track"
              },
              "taint_sinks": {
                "type": "array",
                "items": {"type": "string"},
                "description": "Names of taint sinks to detect"
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for the rule"
    },
    "examples": {
      "type": "object",
      "properties": {
        "positive": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Code examples that should trigger this rule"
        },
        "negative": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Code examples that should NOT trigger this rule"
        }
      }
    }
  }
}
